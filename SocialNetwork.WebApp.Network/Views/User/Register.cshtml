@using SocialNetwork.Core.Application.ViewModels.User;
@model UserSaveViewModel;
@{
    bool editMode;
    if (Model != null)
    {
        editMode = Model.Id == 0 ? false : true;
    }
    else
    {
        editMode = false;
    }
    ViewData["Title"] = "Register";
}

<div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container-fluid">
        <div class="row gx-lg-5 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="my-5 display-3 fw-bold ls-tight">
                    Boots<br />
                    <span class="text-primary">Book</span>
                </h1>
                <p style="color: hsl(217, 10%, 50.8%)">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                    quibusdam tempora at cupiditate quis eum maiores libero
                    veritatis? Dicta facilis sint aliquid ipsum atque?
                </p>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card">
                    <div class="card-body py-5 px-md-5">
                        <h6 class="mb-5 display-5 fw-bold ls-tight">
                            @(editMode ? "Actualizando Perfil" : "Registrarse")
                        </h6>
                        <form method="post" asp-controller="User" asp-action="@(editMode ? "Update" : "Register")" enctype="multipart/form-data">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                            <div class="row">
                                <div class="form-outline mb-4">
                                    <input type="text" asp-for="Name" class="form-control" />
                                    <label class="form-label" asp-for="Name">Nombre</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                
                                <div class="form-outline mb-4">
                                    <input type="text" asp-for="LastName" class="form-control" />
                                    <label class="form-label" asp-for="LastName">Apellido</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>

                                </div>

                                <div class="form-outline mb-4">
                                    <input type="text" asp-for="Username" class="form-control" />
                                    <label class="form-label" asp-for="Username">Nombre de usuario</label>
                                    <span asp-validation-for="Username" class="text-danger"></span>

                                </div>

                                <div class="form-outline mb-4">
                                    <input type="email" asp-for="Email" class="form-control" />
                                    <label class="form-label" asp-for="Email">Correo electrónico</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>

                                <div class="form-outline mb-4">
                                    <input type="password" asp-for="Password" class="form-control" />
                                    <label class="form-label" asp-for="Password">Contraseña</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>

                                <div class="form-outline mb-4">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                                    <label class="form-label" asp-for="ConfirmPassword">Confirmar Contraseña</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                </div>

                                <div class="form-outline mb-4">
                                    <input type="file" asp-for="File" class="form-control" />
                                    <label class="form-label" asp-for="File">Imagen</label>
                                </div>

                                <button type="submit" class="btn btn-primary btn-block mb-4 col-lg-6 offset-3">
                                    Registrarse
                                </button>
                            </div>

                        </form>
                        <a class="col-lg-6 offset-2" asp-controller="User" asp-action="Index">¿Ya tienes una cuenta? Inicia sesión aquí</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


